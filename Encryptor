<body>

<div class="container">
    <h1>[ SYSTEM_UNIVERSAL_V4 ]</h1>
    
    <label>ACCESS_KEY:</label>
    <input type="password" id="mKey" placeholder="ENTER_KEY...">

    <label>DECRYPTED_DATA:</label>
    <textarea id="pIn" rows="4"></textarea>

    <div class="btn-group">
        <button class="action-btn" onclick="run('enc')">ENCRYPT ↓</button>
        <button class="action-btn" onclick="run('dec')">DECRYPT ↑</button>
    </div>

    <label>ENCRYPTED_DATA:</label>
    <textarea id="cOut" rows="4"></textarea>
</div>

<script>
    async function run(m) {
        const p = document.getElementById('mKey').value;
        if(!p) { alert("ERROR: NO_KEY"); return; }
        
        try {
            const encoder = new TextEncoder();
            const keyData = await crypto.subtle.digest('SHA-256', encoder.encode(p));
            const key = await crypto.subtle.importKey('raw', keyData, {name: 'AES-GCM'}, false, ['encrypt', 'decrypt']);
            const iv = new Uint8Array(12);

            if (m === 'enc') {
                const text = document.getElementById('pIn').value;
                if(!text) return;
                const enc = await crypto.subtle.encrypt({name: 'AES-GCM', iv}, key, encoder.encode(text));
                document.getElementById('cOut').value = btoa(String.fromCharCode(...new Uint8Array(enc)));
                document.getElementById('pIn').value = "";
            } else {
                const text = document.getElementById('cOut').value;
                if(!text) return;
                const data = new Uint8Array(atob(text).split("").map(c => c.charCodeAt(0)));
                const dec = await crypto.subtle.decrypt({name: 'AES-GCM', iv}, key, data);
                document.getElementById('pIn').value = new TextDecoder().decode(dec);
                document.getElementById('cOut').value = "";
            }
        } catch(e) {
            alert("FAILURE: WRONG_KEY OR BROWSER_SECURITY_BLOCK");
        }
    }
</script>
</body>
